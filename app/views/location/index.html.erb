<div id="map-container">
  <div id="map"></div>
</div>

  <div id="googlemaps"></div>
  <div id="contactform">
    <div class="row">
      <h3>Please enter your location:</h3>
      <br>
        <%= form_tag opportunities_path, :method => :get do %>
        <p>
        <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "Search" %>
        <br>
        <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
        </p>
        <% end %>
      </div>
    </div>
  
  <div id="largeModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h2 class="modal-title">United Way would like to use your current location.</h2>
        </div>
        <div class="modal-body">
            <h3>Turn On Location Services So We Can Find Volunteering Opportunities Near You.</h3>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Don't Allow</button>
            <button data-dismiss="modal" type="button" class="btn btn-primary">OK</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>


  <script type="text/javascript">
    $(document).ready(function(){
      $("#largeModal").modal('show');
    });
  </script>
